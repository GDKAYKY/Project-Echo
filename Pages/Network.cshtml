@page
@model NetworkModel
@{
    ViewData["Title"] = "Network";
}

<div class="network-page">
    <div class="copy">
        <div class="page-title">
            <h1>Network_</h1>
            <p class="subheading">Monitor and manage your network</p>
        </div>
        <div class="network-dashboard">
            <div class="network-stats">
                <div class="stat-card">
                    <div class="stat-title">Active Connections</div>
                    <div class="stat-value">247</div>
                </div>
                <div class="stat-card">
                    <div class="stat-title">Network Utilization</div>
                    <div class="stat-value">68%</div>
                </div>
                <div class="stat-card">
                    <div class="stat-title">Latency</div>
                    <div class="stat-value">12ms</div>
                </div>
                <div class="stat-card">
                    <div class="stat-title">Packet Loss</div>
                    <div class="stat-value">0.02%</div>
                </div>
            </div>
            <div class="network-tools">
                <div class="tool-heading">Network Tools</div>
                <div class="tool-buttons">
                    <div class="search-button">
                        <button type="button">Ping_</button>
                    </div>
                    <div class="search-button">
                        <button type="button">Traceroute_</button>
                    </div>
                    <div class="search-button">
                        <button type="button">DNS Lookup_</button>
                    </div>
                    <div class="search-button">
                        <button type="button">Port Scan_</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 