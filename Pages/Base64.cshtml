@page
@model Project_Echo.Pages.Base64Model
@{
    ViewData["Title"] = "Base64 Encoder/Decoder";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/base64.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
}

<div class="base64-page">
    <div class="page-container">
        <div class="page-title">
            <h1>Base64 Encoder/Decoder<span class="underscore">_</span></h1>
            <p class="subheading">Convert images to Base64 strings and vice versa</p>
        </div>
        <div class="content-container">
            <!-- Encode Section -->
            <div class="section">
                <h2>
                    <i class="fas fa-upload"></i>
                    Encode Image to Base64
                </h2>
                
                <div id="encode-upload-area" class="upload-area">
                    <div class="upload-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <p>Drag and drop an image here or click to select</p>
                    <input type="file" id="encode-file-input" class="file-input" accept="image/*">
                </div>

                <div id="encode-preview" class="preview-area">
                    <p>Preview will appear here</p>
                </div>

                <div id="encode-file-info" class="file-info"></div>

                <textarea id="encode-base64-text" class="textarea" readonly placeholder="Base64 string will appear here..."></textarea>
                
                <button id="encode-copy" class="btn">
                    <i class="fas fa-copy"></i> Copy Base64
                </button>
            </div>

            <!-- Decode Section -->
            <div class="section">
                <h2>
                    <i class="fas fa-download"></i>
                    Decode Base64 to Image
                </h2>

                <textarea id="decode-base64-text" class="textarea" placeholder="Paste your Base64 string here..."></textarea>

                <button id="decode-copy" class="btn">
                    <i class="fas fa-copy"></i> Copy Base64
                </button>

                <div id="decode-preview" class="preview-area">
                    <p>Preview will appear here</p>
                </div>

                <div id="decode-file-info" class="file-info"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/base64.js" asp-append-version="true"></script>
} 