<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project ECHO</title>
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/documentation.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;400;500;700&family=JetBrains+Mono:wght@100;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header">
        <a href="/" class="radar-icon-link">
            <div class="radar-icon"></div>
        </a>
        <a href="/" class="site-name-link">
            <div class="site-name">ECHO</div>
        </a>
    </div>
    
    <div class="sidebar">
        <div class="sidebar-base"></div>
        <div class="dividers">
            @{
                var activeState = Project_Echo.Helpers.SidebarHelper.GetActiveSidebarState(Context.Request.Path.Value);
                var activeDividers = activeState?.DividerSelectors ?? new List<string>();
            }
            <div class="line-1 @(activeDividers.Contains(".dividers .line-1") ? "active" : "")"></div>
            <div class="line-2 @(activeDividers.Contains(".dividers .line-2") ? "active" : "")"></div>
            <div class="line-3 @(activeDividers.Contains(".dividers .line-3") ? "active" : "")"></div>
            <div class="line-4 @(activeDividers.Contains(".dividers .line-4") ? "active" : "")"></div>
            <div class="line-5 @(activeDividers.Contains(".dividers .line-5") ? "active" : "")"></div>
            <div class="line-6 @(activeDividers.Contains(".dividers .line-6") ? "active" : "")"></div>
            <div class="line-7 @(activeDividers.Contains(".dividers .line-7") ? "active" : "")"></div>
        </div>
        
        <a href="/" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
            <div class="sql-query">
                <div class="database-search-icon"></div>
            </div>
        </a>
        
        <a href="/Terminal" class="sidebar-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Terminal" ? "active" : "")">
            <div class="ssh-terminal">
                <div class="terminal-icon"></div>
            </div>
        </a>
        
        <a href="/RemoteAccess" class="sidebar-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/RemoteAccess" ? "active" : "")">
            <div class="remote-access">
                <div class="desktop-windows-icon"></div>
            </div>
        </a>
        
        <a href="/Documentation" class="sidebar-link @(Project_Echo.Helpers.SidebarHelper.IsActivePage("/Documentation", Context.Request.Path.Value) ? "active" : "")">
            <div class="documentation">
                <div class="docs-icon"></div>
            </div>
        </a>

        <a href="/Documentation/docs/" class="sidebar-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Documentation/docs/" ? "active" : "")">
        </a>

        <a href="/Network" class="sidebar-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Network" ? "active" : "")">
            <div class="network">
                <div class="public-icon"></div>
            </div>
        </a>
    </div>
    
    <div class="main-content">
        <div class="world-map-bg"></div>
        @RenderBody()
    </div>

    <script src="~/js/site.js" asp-append-version="true" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 