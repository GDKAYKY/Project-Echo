<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project ECHO</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;400;500;700&family=JetBrains+Mono:wght@100;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header">
        <a href="/" class="radar-icon-link">
            <div class="radar-icon"></div>
        </a>
        <a href="/" class="site-name-link">
            <div class="site-name">ECHO</div>
        </a>
    </div>
    
    <div class="sidebar">
        <div class="sidebar-base"></div>
        <div class="dividers">
            <div class="line-1"></div>
            <div class="line-2"></div>
            <div class="line-3"></div>
            <div class="line-4"></div>
            <div class="line-5"></div>
            <div class="line-6"></div>
            <div class="line-7"></div>
        </div>
        
        <a href="/" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
            <div class="sql-query">
                <div class="database-search-icon"></div>
            </div>
        </a>
        
        <a href="/Terminal" class="sidebar-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Terminal" ? "active" : "")">
            <div class="ssh-terminal">
                <div class="terminal-icon"></div>
            </div>
        </a>
        
        <a href="/RemoteAccess" class="sidebar-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/RemoteAccess" ? "active" : "")">
            <div class="remote-access">
                <div class="desktop-windows-icon"></div>
            </div>
        </a>
        
        <a href="/Documentation" class="sidebar-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Documentation" || ViewContext.RouteData.Values["controller"]?.ToString() == "Documentation" ? "active" : "")">
            <div class="documentation">
                <div class="docs-icon"></div>
            </div>
        </a>
        
        <a href="/Network" class="sidebar-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Network" ? "active" : "")">
            <div class="network">
                <div class="public-icon"></div>
            </div>
        </a>
    </div>
    
    <div class="main-content">
        <div class="world-map-bg"></div>
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 